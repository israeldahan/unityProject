    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "api",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/customer-api/server.js",
            "cwd": "${workspaceFolder}/customer-api"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "worker",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/customer-worker/worker.js",
            "cwd": "${workspaceFolder}/customer-worker"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ws",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/ws-app/server.js",
            "cwd": "${workspaceFolder}/ws-app"
        }

    ]
}